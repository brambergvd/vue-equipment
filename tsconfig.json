{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@maas/vue-equipment/composables": ["./packages/composables/index.ts"],
      "@maas/vue-equipment/composables/*": ["./packages/composables/*"],
      "@maas/vue-equipment/plugins": ["./packages/plugins/index.ts"],
      "@maas/vue-equipment/plugins/*": ["./packages/plugins/*"],
      "@maas/vue-equipment/metadata": ["./packages/metadata/index.ts"],
      "@maas/vue-equipment/utils": ["./packages/utils/index.ts"],
      "@maas/vue-equipment/utils/types/*": ["./packages/utils/src/types/*"],
      "@maas/vue-equipment/utils/css/*": ["./packages/utils/src/css/*"]
    }
  },
  "include": [
    "packages",
    "packages/.vitepress/components/*.vue",
    "packages/.vitepress/*.ts",
    "meta"
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist",
    "packages/.test",
    "packages/_docs",
    "packages/nuxt"
  ]
}
