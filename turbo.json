{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#update:metadata": {
      "cache": false,
      "outputs": ["./packages/metadata/index.json"]
    },
    "//#t:release": {
      "cache": false,
      "dependsOn": [
        "^build:types",
        "composables#build",
        "plugins#build",
        "nuxt#build"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["./dist/**"]
    },
    "build:types": {
      "cache": false,
      "outputs": ["./types/**"]
    },
    "composables#build": {
      "outputs": ["./dist/composables/**"]
    },
    "docs#dev": {
      "cache": false,
      "dependsOn": ["//#update:metadata", "build:types", "^build"]
    },
    "docs#build": {
      "dependsOn": ["//#update:metadata", "^build:types", "^build"]
    },
    "plugins#build": {
      "dependsOn": ["utils#build"]
    },
    "nuxt#build": {
      "dependsOn": ["//#update:metadata", "composables#build", "plugins#build"],
      "outputs": ["./dist/nuxt/**"]
    },
    "nuxt#dev": {
      "dependsOn": ["//#update:metadata", "composables#build", "plugins#build"]
    },
    "utils#build": {
      "outputs": ["./dist/utils/**"]
    }
  }
}
