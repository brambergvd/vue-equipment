{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": false,
    "strict": true,
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "types",
      "./node_modules/@types",
      "./../../node_modules/@types"
    ]
  },
  "exclude": ["node_modules", "**/*.md", "**/dist", ".test"]
}
